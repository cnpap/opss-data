{
  "name": "pkg-placeholder",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.20.0",
  "description": "_description_",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/pkg-placeholder#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/pkg-placeholder.git"
  },
  "bugs": "https://github.com/antfu/pkg-placeholder/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepublishOnly": "nr build",
    "release": "bumpp",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc",
    "prepare": "simple-git-hooks",
    "clickhouse:ping": "dotenvx run -- tsx src/scripts/clickhouse-setup.ts --ping",
    "clickhouse:apply": "dotenvx run -- tsx src/scripts/clickhouse-setup.ts --create-db --apply",
    "clickhouse:refresh": "dotenvx run -- tsx src/scripts/generate-clickhouse-ddl.ts --out src/clickhouse/sql/generated ; dotenvx run -- tsx src/scripts/clickhouse-setup.ts --drop-db --create-db --apply --sql-dir src/clickhouse/sql/generated",
    "postgres:ping": "dotenvx run -- tsx src/scripts/postgres-setup.ts --ping",
    "postgres:apply": "dotenvx run -- tsx src/scripts/postgres-setup.ts --create-db --apply",
    "postgres:generate-fake": "dotenvx run -- tsx src/scripts/postgres-setup.ts --generate-fake",
    "postgres:refresh": "dotenvx run -- tsx src/scripts/postgres-setup.ts --drop-db --create-db --apply --generate-fake",
    "fake-data": "dotenvx run -- tsx src/scripts/generate-fake-data.ts",
    "generate-cdc-logs": "dotenvx run -- tsx src/scripts/generate-cdc-logs.ts",
    "listen-pgoutput": "dotenvx run -- tsx src/scripts/listen-pgoutput.ts",
    "clickhouse:sync-cdc": "dotenvx run -- tsx src/scripts/apply-cdc-to-clickhouse.ts --dir src/cdc-data",
    "clickhouse:sync-cdc:dry": "dotenvx run -- tsx src/scripts/apply-cdc-to-clickhouse.ts --dir src/cdc-data --dry-run"
  },
  "dependencies": {
    "@clickhouse/client": "catalog:",
    "@faker-js/faker": "catalog:",
    "dayjs": "catalog:",
    "pg": "catalog:",
    "pg-logical-replication": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@dotenvx/dotenvx": "catalog:",
    "@types/node": "catalog:types",
    "@types/pg": "catalog:",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:testing",
    "tsdown": "catalog:cli",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
